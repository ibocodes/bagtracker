# BagPilot Environment Configuration
# Copy this file to .env.local for local development

# Demo Mode (set to true for airport presentation)
NEXT_PUBLIC_DEMO_MODE=true

# Simulated API Configuration
NEXT_PUBLIC_API_BASE_URL=https://api.bagpilot-demo.com
NEXT_PUBLIC_API_VERSION=v1

# Map Configuration
NEXT_PUBLIC_MAP_DEFAULT_CENTER_LAT=51.505
NEXT_PUBLIC_MAP_DEFAULT_CENTER_LNG=-0.09
NEXT_PUBLIC_MAP_DEFAULT_ZOOM=13

# Demo Airport Codes (for presentation)
NEXT_PUBLIC_DEMO_AIRPORTS=JFK,LAX,LHR,CDG

# Toast Notification Settings
NEXT_PUBLIC_TOAST_DURATION=5000
NEXT_PUBLIC_TOAST_MAX_VISIBLE=3

# Animation Settings
NEXT_PUBLIC_ANIMATION_DURATION=300
NEXT_PUBLIC_ENABLE_ANIMATIONS=true

# Demo Data Settings
NEXT_PUBLIC_SIMULATE_DELAYS=true
NEXT_PUBLIC_API_CALL_DELAY=1000
